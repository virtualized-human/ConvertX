    "globals": "^15.12.0",
    "knip": "^5.37.2",
    "npm-run-all2": "^7.0.1",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.15",
